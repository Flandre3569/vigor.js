{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@runtime": ["runtime/index.ts"]
    },
  },
  "include": ["src/**/*", "deploy"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/playground/**",
    "tsup.config.ts"
  ]
}